   <script src="https://cdn.jsdelivr.net/npm/@ideal-postcodes/postcode-lookup-bundled@2.0.0/dist/postcode-lookup.min.js"></script>

    <script>
        // Ideal Postcodes API setup
        IdealPostcodes.PostcodeLookup.setup({
          apiKey: '<%=IdealPostcodesApi%>',
          context: "#lookup_field",
          onAddressSelected: function(address) {
        const result = [
          address.line_1,
          address.line_2,
          address.line_3,
          address.post_town,
          address.postcode,
          ].filter(elem => elem !== '').join("\n");
        
          // Ideal Postcodes Output field setup
          document.getElementById('output_field').textContent = result;
        },
          buttonClass: 'secondary-button',
          buttonId: 'find-address-button',
          inputClass: 'my-input-class',
          selectClass: 'my-input-class'
        });
    </script>
    
